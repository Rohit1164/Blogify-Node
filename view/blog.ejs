<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
    <title>blog</title>
</head>

<body>
  <%- include('./partials/nav') %>
    <div class="container">
      <h1>
        <%= blog.title %>
      </h1>
      <img src="<%= blog.coverImageURL %>" height="300px">
      <p class="mt-3">
        <%= blog.body %>
      </p>
    </div>

    <div class="container mt-3">
      <img src="<%= blog.createdBy.profileImageURL %>" height="30px">
      <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
      <p>Comment:(<%= comment.length %>)</p>
      <% if (locals.user) { %>
        <form action="/blog/comment/<%=blog._id  %>" method="post">
          <div>
            <input type="text" name="content" class="form-control" placeholder="Enter Yor Comment">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
        <% } %>
    </div>

    <div class="container mt-3">
      <% comment.forEach(comment=> { %>
        <img src="<%= blog.createdBy.profileImageURL %>" height="50px">
        <%= blog.createdBy.fullName %>
          <pre><%= comment.content %></pre>
          <% }) %>
    </div>

    <%- include('./partials/script') %>
</body>

</html>